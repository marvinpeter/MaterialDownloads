{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "commonjs",
        "target": "es2017",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "jsx": "react",
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/**/*"
    ]
}